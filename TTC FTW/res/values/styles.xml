<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/action_bar</item>
    </style>

    <style name="action_bar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/action_bar_title_text</item>
        <item name="android:background">@color/ttc_red</item>
    </style>

    <style name="action_bar_title_text" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="card_header_title" parent="card_header_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="card_title" parent="card_title">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="card_content" parent="card_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
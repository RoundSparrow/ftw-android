<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!-- App branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <!-- Primary text color -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Apply action bar style -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Action bar -->
    <style name="ActionBar" parent="android:Widget.Material.Light.ActionBar.Solid">
        <!-- Remove shadow below the action bar via elevation -->
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Drawer panel -->
    <style name="DrawerPanel">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- List in the drawer -->
    <style name="DrawerList">
        <item name="android:divider">@null</item>
    </style>

    <!-- Individual drawer items -->
    <style name="DrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Drawer item with an icon -->
    <style name="DrawerItem.WithIcon">
        <item name="android:paddingStart">0dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!-- 'Add' drawer item -->
    <style name="DrawerItem.WithIcon.Add">
        <item name="android:drawableStart">@drawable/ic_add_inset_36dp</item>
    </style>

    <style name="DrawerItem.WithIcon.About">
        <item name="android:drawableStart">@drawable/ic_info_inset_36dp</item>
    </style>

    <!-- Style for a PagerSlidingTabStrip below the action bar -->
    <style name="PagerSlidingTabStrip">
        <!-- Set background color to be the same as the action bar -->
        <item name="android:background">?android:colorPrimary</item>
        <!-- Invert the text color just like the action bar -->
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <!-- Give the tab strip a shadow via elevation -->
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style for a ViewPager -->
    <style name="ViewPager">
        <!--<item name="android:background">@android:color/white</item>-->
    </style>

    <!-- Style for agency card title -->
    <style name="AgencyCardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Style for stop card title -->
    <style name="StopCardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
